\subsection{Contagion process}

\begin{frame}{Freidkinâ€™s  Structural Theory of Social Influence:}{Network Diffusion & Peer Influence}

	\Columns{0.65}{0.35}{
		Two-part model:
		\Itemize{
			\item Individual characteristics:
			\Itemize{
				\item Individual vulnerability (Technical)
				\Itemize{
					\item Password 
					\item Number of messages sent without ciphering.
					\item Private/Public connected network
				}
				\item Interpersonal influences
				\Itemize{
					\item Frequency of interaction without ciphering
					\item Frequency of interaction with ciphering
				}
			}
		}
		Model:
		\Itemize{
			\item $Y^{(1)}=XB$
			\item $Y^{(t)}=\alpha WY^{(t-1)} + (1 - \alpha) Y^{(1)}$
			\item Where,
			\Itemize{
				\item Y(1) = an N x M matrix of initial opinions on M issues for N actors
				\item X   = an N x K matrix of K exogenous variable that affect Y
				\item B   = a K x M matrix of coefficients relating X to Y
				\item a   = a weight of the strength of endogenous interpersonal influences
				\item W  = an N x N matrix of interpersonal influences
			}
		}
	}{
		\Figure{h}{.7}{vulnerability_.png}{Vulnerability contagion process}
%		\movie[autostart,label=cells,width=\textwidth,height=0.5\textheight,showcontrols]{}{movie.mp4}
	}

\end{frame}


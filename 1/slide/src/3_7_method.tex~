

\begin{frame}{Etape 3: Calcule de la vulnérabilité sociale}{Théorie de l'influence sociale de Freidkin}

	\Columns{.65}{.35}{
		Propriétés formelles du modèle:
		\Itemize{
			\item Lorsque l'influence interpersonnelle est complète, le modèle se réduit à:
			\Itemize{
				\item les vulnérabilités moyennes de ses amis pondérées par leur niveau de confiance.
				\item[] \EquationT{2}{Y^{(t)}=\red{1 * MY^{(t-1)}} + (1 - 1) Y^{(t-1)}}
				\item[] \centering $Y^{(t)}=  \red{MY^{(t-1)}}$
			}
			\item En absence d'influence interpersonnelle, le modèle se réduit à:
			\Itemize{
				\item[] \EquationT{2}{Y^{(t)}=0 * MY^{(t-1)} + \blue{(1 - 0) Y^{(t-1)}}}
				\item[] \centering $Y^{(t)}= \blue{Y^{(t-1)}}$
			}
		}
	}{
		\Figure{h}{.73}{oo.png}{Vulnérabilité sociale}
	}

\end{frame}


